<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Лицензионный ключ:" />

    <EditText
        android:id="@+id/settings_editText1"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_textView1"
        android:inputType="textPersonName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:maxLength="32"
        android:ems="10" />


    <TextView
        android:id="@+id/settings_textView2"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_editText1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />

    <SeekBar
        android:id="@+id/settings_seekBar1"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_textView2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:min="8"
        android:progress="32" />

    <Button
        android:id="@+id/settings_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settings_textView1"
        android:layout_marginBottom="20dp"
        android:text="Закрыть программу" />

    <Button
        android:id="@+id/settings_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/settings_button2"
        android:layout_marginEnd="15dp"
        android:text="Ok" />

</RelativeLayout>